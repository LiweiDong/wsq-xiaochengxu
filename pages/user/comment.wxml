<view style='margin-bottom:8px;'/>
<view wx:for="{{comments}}" wx:for-item="item" wx:key="{{item.id}}">
  <view class="card" style='padding: 8px;' bindtap='clickItem' data-idx='{{index}}'>
    <text class='title'>我: {{ item.content }}</text>
    <view class="horizontal gray-bg">
      <image class='avatar-large' style='margin-right: 8px;'
        src="{{item.author.avatar?item.author.avatar:'/res/img/user_icon.png'}}" 
        />
      <view>
        <view class='title'>@{{item.replier.nickname?item.replier.nickname:'匿名'}}</view>
        <view class='subtitle single-line'>{{item.subject}}</view>
      </view>
    </view>
  </view>
  <view style='margin-bottom:4px;'/>
</view>

<view wx:if='{{loader.ing}}' style='text-align:center;'>
  <text>正在加载...</text>
</view>
<view wx:if='{{!loader.more}}' style='text-align:center;'>
  <text>没有更多数据了</text>
</view>