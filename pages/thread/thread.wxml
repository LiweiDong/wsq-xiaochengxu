<!--pages/post/posts.wxml-->

<view class="card">
  <view class="horizontal">
      <image class='avatar-large' style='margin: 4px 4px 4px 0px;'
        src="{{item.post.author.avatar?item.post.author.avatar:'/res/img/user_icon.png'}}" 
        />
    <view>
      <view class='title'>{{item.post.author.nickname}}</view>
      <view class='subtitle'>摘要信息</view>
    </view>
  </view>

  <view style='margin-top:4px;'>
    <text>{{item.post.content}}</text>
  </view>
</view>
<view style='margin-bottom:4px;'/>

<view>评论</view>
<view class="card">
  <view wx:for="{{comments}}" wx:for-index="idx" wx:for-item="item">
    <view class="h-top">
      <image class="avatar-large"
        src="{{item.author.avatar?item.author.avatar:'/res/img/user_icon.png'}}" 
        />
      <view style='width:100%;'>
        <view class='title'>{{item.author.name}}</view>
        <view class='comment-detail'>{{item.text}}</view>
        <view class='subtitle'>{{'1-27 20:10'}}</view>
        <view class='line'></view>
      </view>
    </view>
  </view>
  <view style='margin-bottom:4px;'/>
</view>

<!--底部评论框 -->
<view class="release">
    <textarea class="text" bindinput='bindInput'
          placeholder-class="input_null" 
          fixed="true" 
          maxlength="-1" 
          show-confirm-bar="false" 
          cursor-spacing="15" 
          auto-height="true" 
          focus="{{reply.focus}}"
          placeholder="回复 {{releaseName}}"></textarea>
    <view class="submit" bindtap='sendComment'>发送</view>
</view>

