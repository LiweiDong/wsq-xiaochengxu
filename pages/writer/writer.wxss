/* pages/writer/writer.wxss */
.btn-submit {
  width: 96%;
  background-color: rgba(52, 193, 192, 1);
  color: #fff;
}

.btn-submit-hover {
  width: 96%;
  background-color: rgba(52, 193, 192, .6);
  color: #fff;
}

.btn-cancel {
  width: 96%;
  background-color: #f8f8f8;
  color:gray;
}

.btn-cancel-hover {
  width: 96%;
  background-color: lightgray;
  color:gray;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.thumb {
  width: 28vw;
  height: 28vw;
}

.thumb image {
  width: 100%;
  height: 100%;
}

.thumb .del {
  position:absolute;
  margin-left: 0px;
  margin-top: 0px;
  width: 48rpx;
  height: 48rpx;
  opacity: .6;
}

.add {
  background: #f8f8f8;
  width: 30vw;
  height: 30vw;
  margin: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add image {
  width: 40%;
  height: 40%;
}