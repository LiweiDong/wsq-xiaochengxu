/* pages/writer/writer.wxss */
.btn-submit {
  width: 96%;
  color: #fff;
}

.btn-submit-hover {
  width: 96%;
  color: #fff;
  opacity: .6;
}

.btn-cancel {
  width: 96%;
  background-color: #f8f8f8;
  color:gray;
}

.btn-cancel-hover {
  width: 96%;
  background-color: lightgray;
  color:gray;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.thumb {
  width: 28vw;
  height: 28vw;
  margin: 6rpx;
}

.thumb image {
  width: 100%;
  height: 100%;
}

.thumb .del {
  position:absolute;
  margin-left: 0px;
  margin-top: 0px;
  width: 48rpx;
  height: 48rpx;
  opacity: .6;
}

.add {
  background: #f8f8f8;
  width: 28vw;
  height: 28vw;
  margin: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add image {
  width: 40%;
  height: 40%;
}

.tag-title {
  font-size: 32rpx;
  margin: 6rpx 0;
}

.tag-list {
  margin-left: -14rpx; 
}

.tag {
  border: 1rpx solid lightgray;
  border-radius: 2px;
  font-size: 32rpx;
  color: gray;
  padding: 8rpx 16rpx;
  margin: 4rpx 16rpx;
  word-break: keep-all;
}
