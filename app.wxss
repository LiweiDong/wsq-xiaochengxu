@import 'style/weui.wxss';

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/**pgae */
page{
  background-color:#eee;
  height:100%;
}

.card {
  border: 2px solid #ffffff;
  background-color: #ffffff;
  box-shadow: 9.36rpx 2.34rpx 2.34rpx #cccccc;
  margin-bottom: 18.72rpx;
  position: relative;
  padding: 18.72rpx;
}

.line {
  height: 1px;
  background-color: #f8f8f8;
  margin: 18.72rpx 0;
}

.horizontal {
  display: flex;
  align-items: center;
}


.avatar-large {
  width: 106rpx; 
  height: 106rpx;
  min-width: 106rpx;
  max-width: 106rpx;
  border-radius: 54rpx;
}

.title {
  font-size: 30rpx;
}

.fade-title {
  font-size: 30rpx;
  color: #888888;
}

.subtitle {
  font-size: 26rpx;
  color: #888888;
}

.flow-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.img-text {
  display: flex;
  align-items: center;
}

.img-text image{
  height: 38rpx;
  width: 38rpx;
  margin-left: 9.36rpx;
}

.img-text text {
  text-align: center;
  width: 56rpx;
  font-size: 32rpx;
  color: #888888;
}

.single-line {
  display: block;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.gray-bg {
  background: #f8f8f8;
}

.highlight {
  color:dodgerblue;
}